  SELECT MAX(id_persona) FROM persona;-- Valor Maximo
  union ALL----------------------------- Selecionar todo
  SELECT min(id_persona) FROM persona;-- Valor Minimo 
  UNION ALL
  SELECT avg(id_persona) FROM persona;-- Valor Promedio 
  SELECT COUNT(id_persona) FROM persona; --Cantidad Registros
  SELECT SUM(id_persona) from persona; --Sumatoria de registros
